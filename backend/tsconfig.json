{
  "compilerOptions": {
    "target": "es2020",
    "module": "node18",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "outDir": "./dist",
    "types":["jest","node"],
    "moduleResolution": "nodenext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}